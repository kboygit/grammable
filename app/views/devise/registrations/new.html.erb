<div class="container">
  <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3  card form">

    <h2 class="brand text-center">Grammable</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, placeholder: "Email", required: true, autofocus: true %>
        <%= f.input :password, placeholder: "Password", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, placeholder: "Confirm Password", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: 'btn btn-block btn-lg btn-outline' %>
      </div>
    <% end %>
    <br />
  </div>

  <div class="text-center">
    <div class="col-10 col-md-6 offset-md-3 card form">
      Have an account? <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
